
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow a user full read/write access to their own company profile
    // and all documents in all subcollections within it (e.g., materials, collaborators, fuentes, etc.).
    // The {documents=**} is a recursive wildcard.
    match /companyProfiles/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow any authenticated user to read the userMappings collection.
    // This is necessary for a collaborator to find out which admin/company they belong to upon login.
    match /userMappings/{userId} {
      allow read: if request.auth != null;
    }

  }
}
