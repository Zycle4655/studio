
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para perfiles de empresa y todas sus subcolecciones
    match /companyProfiles/{ownerId} {
      
      // El propietario puede leer y escribir en su propio documento de perfil
      allow read, write: if request.auth != null && request.auth.uid == ownerId;
      
      // El propietario tiene control total sobre TODAS las subcolecciones dentro de su perfil
      // Esto cubre: materials, collaborators, purchaseInvoices, saleInvoices, asociados, fuentes, etc.
      match /{subcollection}/{docId=**} {
        allow read, write: if request.auth != null && request.auth.uid == ownerId;
      }
    }
    
    // Reglas para el mapeo de usuarios (colaboradores)
    // Permite que un usuario autenticado lea su propio mapeo para encontrar a su administrador
    match /userMappings/{userId} {
      allow read: if request.auth != null;
    }
  }
}
