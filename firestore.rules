
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow owner full access to their company profile and ALL subcollections
    match /companyProfiles/{ownerId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == ownerId;
    }

    // Allow any authenticated user to read their own user mapping.
    // This is necessary for collaborators to find their company's admin ID.
    match /userMappings/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
    }
  }
}
